extends layout

include ./mixins/button.pug
include ./mixins/colorPicker.pug
include ./mixins/divider.pug
include ./mixins/audioLoader.pug
include ./mixins/audioDisplay.pug
include ./mixins/fileUpload.pug

block headers
	
block content
	video#recordedCanvas.hidden(controls)
	a#downloadRecordedCanvas.hidden(download = 'myVideo.mp4') Download
	.w-90.mx-auto.my-4
		.d-flex.justify-content-between.m-0
			.buttons-sidebar.mr-2
				.d-flex.flex-wrap.justify-content-center.my-3
					+button("green", "far",  "fa-file", "clearCanvas()")
					+button("green", "far",  "fa-file-image", "saveAsImage()")
					+button("green", "far",  "fa-file-video", "saveAsVideo()")
					//- +button("darkorange", "fas",  "fa-bars")
					//- +button("darkorange", "fas",  "fa-share-alt")
					+divider
					

					+button("red", "fas",  "fa-times", "deleteObject()")
					+button("orange", "fas",  "fa-undo-alt", "undo()")
					+button("orange", "fas",  "fa-redo-alt", "redo()")
					+button("darkorange", "far",  "fa-copy", "copyPaste()")
					+colorPicker("orange", "fas",  "fa-palette")
					+button("orange", "fas",  "fa-arrows-alt", "cursor()")
					+button("orange", "fas",  "fa-pencil-alt", "drawingPencil()")
					+button("orange", "fas",  "fa-pen", "drawingPen()")
					+button("orange", "fas",  "fa-eraser", "drawingEraser()")
					+button("orange", "fas",  "fa-mountain", "addTriangle()")
					+button("orange", "fas",  "fa-square", "addRectangle()")
					+button("orange", "fas",  "fa-circle", "addCircle()")
					+fileUpload("orange", "far",  "fa-images")
					+button("orange", "fas",  "fa-adjust", "applyFilter(0)")
					+button("orange", "fas",  "fa-tint", "applyFilter(1)")
					+button("orange", "fab",  "fa-blackberry", "applyFilter(2, 'blocksize', 2)")
					+button("orange", "fas",  "fa-bold", "applyFilter(3, 'blur', 2)")
					+button("orange", "fas",  "fa-angle-double-up", "jumpAnimation()")
					+button("orange", "fas",  "fa-video", "recordCanvas()")
					+audioLoader("orange", "fas", "fa-music")
					+button("orange", "fas",  "fa-angle-double-down", "fallAnimation()")
					//- +button("orange", "fas",  "fa-microphone", "addShape('triangle')")
					//- +button("orange", "fas",  "fa-microphone-slash", "addShape('circle')")
					+button("darkorange", "fas", "fa-play", "playSound()", true)
				
			#canvas-container.flex-grow-1.bg-white(style="position: relative;")
				canvas#canvasapp.canvasapp
				+audioDisplay
block scripts
	script(src="javascripts/script.js")
						


		
