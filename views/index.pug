extends layout

include ./mixins/button.pug
include ./mixins/colorPicker.pug
include ./mixins/divider.pug
include ./mixins/audioRecorder.pug
include ./mixins/audioDisplay.pug

block headers
	
block content
	.w-90.mx-auto.my-4
		.d-flex.justify-content-between.m-0
			.buttons-sidebar.mr-2
				.d-flex.flex-wrap.justify-content-center.my-3
					+button("green", "far",  "fa-save", "saveAsImage()")
					+button("darkorange", "fas",  "fa-bars")
					+button("darkorange", "far",  "fa-copy", "copyPaste()")
					+button("darkorange", "fas",  "fa-share-alt")
					+button("red", "fas",  "fa-times", "clearCanvas()")
					+divider
					+button("orange", "fas",  "fa-arrows-alt", "cursor()")
					+button("orange", "fas",  "fa-pencil-alt", "drawingPencil()")
					+button("orange", "fas",  "fa-pen", "drawingPen()")
					+colorPicker("orange", "fas",  "fa-palette")
					+button("orange", "fas",  "fa-eraser", "drawingEraser()")
					+button("orange", "fas",  "fa-shapes", "addShape()")
					+button("orange", "far",  "fa-smile")
					+button("orange", "far",  "fa-images", "addImage()")
					+button("orange", "fas",  "fa-crop-alt")
					+button("orange", "fas",  "fa-undo-alt", "undo()")
					+button("orange", "fas",  "fa-redo-alt", "redo()")
					+audioRecorder("orange", "fas", "fa-music")
					+button("orange", "fas",  "fa-microphone", "addShape('triangle')")
					+button("orange", "fas",  "fa-microphone-slash", "addShape('circle')")
					+button("darkorange", "fas", "fa-play", "playSound()", true)
				
			.canvas.flex-grow-1.bg-white(style="position: relative;")
				canvas#canvasapp
				+audioDisplay
block scripts
	script(src="javascripts/script.js")
						


		
