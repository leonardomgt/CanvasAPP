mixin button(color, type, style, onClick="addShape()", doublew=false)
	- var widthStyle = doublew ? 'width:175px;' : 'width:53px;'
	- var buttonID = type + '_' + style;
	.m-1.btn-box(style= widthStyle + ' height:53px; background-color: ' + color + '; ' id=buttonID + '_box')
		div.h-100.w-100.d-flex.justify-content-center.align-items-center(id=buttonID + '_button')
			i.text-white(class=type + ' ' + style style="font-size: .8em")
			

	script.
		$("##{buttonID}_button").click(function(){
			#{onClick}
		});


	style(type='text/css').
		.btn-box {
			border: 1px solid lightgrey;
			border-radius: 26px;
			cursor: pointer;
			opacity: 0.8;
		}

		.btn-box:hover {
			opacity: 1;
		}
		